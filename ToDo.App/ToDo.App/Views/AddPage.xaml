<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo.App.Views.AddPage"
             Title="Agregar Tarea">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Nombre *" TextColor="#27ae60" FontSize="Medium"></Label>
            <Entry x:Name="nombre"></Entry>
            <Label Text="Descripción" TextColor="#27ae60" FontSize="Medium"></Label>
            <Editor x:Name="descripcion" HeightRequest="120"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>